# Railway environment template
# Copy these into Railway → Variables (or `env` tab) and fill in the blanks.

# ── Core ────────────────────────────────────────────────────────────────────
APP_LOG_LEVEL=INFO
APP_NAME=lighter-bot

# ── Market data (required) ─────────────────────────────────────────────────
WS_URL=wss://mainnet.zklighter.elliot.ai/stream
WS_AUTH_TOKEN=<paste-auth-token>
WS_LOG_MID_INTERVAL_S=1.0

# ── Trading credentials (required for live orders) ─────────────────────────
API_BASE_URL=https://mainnet.zklighter.elliot.ai
API_KEY_PRIVATE_KEY=0x<your_api_key_private_key>
ACCOUNT_INDEX=<your_account_index>
API_KEY_INDEX=<your_api_key_index>
MAX_API_KEY_INDEX=
NONCE_MANAGEMENT=OPTIMISTIC

# ── Maker settings ─────────────────────────────────────────────────────────
MAKER_DRY_RUN=true
MAKER_PAIR=market:2
MAKER_SIZE=0.07
MAKER_SPREAD_BPS=10
MAKER_REFRESH_SECONDS=5
MAKER_RANDOMIZE_BPS=4
MAKER_PRICE_SCALE=10
MAKER_SIZE_SCALE=100000
MAKER_LIMITS_MAX_CANCELS=30
MAKER_LIMITS_MAX_LATENCY_MS=2000

# ── Guardrails / alerts ───────────────────────────────────────────────────
ALERTS_ENABLED=true
DISCORD_WEBHOOK=
GUARD_PRICE_BAND_BPS=50
GUARD_CROSSED_BOOK_PROTECTION=true
GUARD_MAX_POSITION_UNITS=0.25
GUARD_MAX_INVENTORY_NOTIONAL=50
GUARD_KILL_ON_CROSSED_BOOK=true
GUARD_KILL_ON_INVENTORY_BREACH=true
GUARD_BACKOFF_SECONDS_ON_BLOCK=2

# ── Telemetry / watchdogs ──────────────────────────────────────────────────
TELEMETRY_ENABLED=true
TELEMETRY_PORT=9100
WATCHDOG_WS_STALE_SECONDS=30
WATCHDOG_QUOTE_STALE_SECONDS=20
WATCHDOG_REMINDER_EVERY_SECONDS=300

# ── Optional testing toggles ───────────────────────────────────────────────
REPLAY_ENABLED=false
CHAOS_ENABLED=false


